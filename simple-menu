Write-Host "Menu:"
Write-Host "1. Option 1"
Write-Host "2. Option 2"

$choice = Read-Host "Enter your choice (1 or 2)"

switch ($choice) {
    "1" {
        Write-Host "You chose Option 1"
        # Insert code for Option 1 here
    }
    "2" {
        Write-Host "You chose Option 2"
        # Insert code for Option 2 here
    }
    Default {
        Write-Host "Invalid choice. Please select 1 or 2."
    }
}
